
@model LibroModel;
@{
    ViewData["Title"] = "eliminarLi";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<div class="card col-8">
    <div class="card-header">
        eliminar libro
    </div>
    <div class="card-body justify-content-center">
        <form asp-action="EliminarLi" asp-controller="LibrosCrud">
            <input asp-for="IdLibro"type="hidden"class="form-control" />
            <div class="card-body justify-content-center">
                eliminar libro?: @Html.DisplayTextFor(n=>n.Nombre)?

            </div>
            <div class="col-md-4 mb-3">
                <button type="submit" class="btn btn-danger mb-3 btn-sm">Eliminar</button><br />
                <a asp-action="Lista" asp-controller="LibrosCrud" class="btn btn-warning btn-sm">volver</a>
            </div>
        </form>
    </div>

</div>
