@model CLibro.Models.LibroModel;
@{
    <link rel="stylesheet" href="./css/style.css"/>

    <div class="container my-3" id="D">
        <div class="row" id="D">
            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 py-4"></div>
            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 py-4 bg-white">

                <div id="container">
                    <h1>Gestión de Libros</h1>

                    <h2>Añadir/Modificar Libro</h2>
                    <form asp-action="añadirLi" asp-controller="Libro" id="book-form">
                        <label for="title">Título:</label>
                        <input asp-for="Nombre" type="text" id="title" placeholder="Título" required>
                        <label for="author">Autor:</label>
                        <input asp-for="Autor" type="text" id="author" placeholder="Autor" required>
                        <label for="Cantidad">Cantidad:</label>
                        <input asp-for="Cantidad" type="number" id="title" placeholder="Cantidad" required>
                        <label for="isbn">ISBN:</label>
                        <input asp-for="ISBN" type="text" id="isbn" placeholder="ISBN" required>
                        <label for="fcompra">Fecha de compra:</label>
                        <input asp-for="F_Compra" type="text" id="fcompra" placeholder="Fecha de Compra" required>
                        <label for="fadquisicion">fecha de adquisicion:</label>
                        <input asp-for="F_Adquisicion" type="text" id="fadquisicion" placeholder="Fecha de Adquisicion" required>
                        <button type="button" id="save-button">Guardar</button>
                        <br>
                        <button type="button" id="cancel-button">Cancelar</button>
                    </form>
                </div>


            </div>
        </div>
    </div>







    



}
